<div class="{{ aSurveyInfo.class.registerform }} fr-grid-row" {{ aSurveyInfo.attr.registerform }}>
    {{ C.Html.form(aSurveyInfo.sRegisterFormUrl,'post',({'id' : 'limesurvey', 'role' : 'form', 'class' : 'form'})) }}

    {{aSurveyInfo.registerform.hiddeninputs}}

    <div class='{{ aSurveyInfo.class.registerformcol }} fr-col-lg-8 fr-col-offset-2--lg' {{ aSurveyInfo.attr.registerformcol }}>
        <div class="ls-js-hidden fr-mb-3w">
            {{ include('./subviews/navigation/language_changer.twig') }}
        </div>
        {# Participants first name #}
        <div class='fr-input-group {{ aSurveyInfo.class.registerformcolrow }} fr-mb-3w' {{ aSurveyInfo.attr.registerformcolrow }}>
            <label for='register_firstname' class='{{ aSurveyInfo.class.registerformcolrowlabel }} fr-label '>{{ gT("First name:") }}</label>
            {{ C.Html.textField('register_firstname', aSurveyInfo.sFirstName, ({'id' : 'register_firstname','class' : 'fr-input'})) }}
        </div>

        {# Participants last name #}
        <div class='fr-input-group {{ aSurveyInfo.class.registerformcolrowb }} fr-mb-3w' {{ aSurveyInfo.attr.registerformcolrowb }}>
            <label {{ aSurveyInfo.attr.registerformcolrowblabel }} for='register_lastname' class='{{ aSurveyInfo.class.registerformcolrowblabel }} fr-label '>{{ gT("Last name:") }}</label>
            {{ C.Html.textField('register_lastname', aSurveyInfo.sLastName, ({'id' : 'register_lastname', 'class' : 'fr-input'})) }}
        </div>

        {# Participants email #}
        <div class='fr-input-group {{ aSurveyInfo.class.registerformcolrowc }} fr-mb-3w' {{ aSurveyInfo.attr.registerformcolrowc }}>
            <label {{ aSurveyInfo.attr.registerformcolrowclabel }} for='register_email' class='{{ aSurveyInfo.class.registerformcolrowclabel }}  fr-label'>
                {{ gT("Email address:") }}
                <span class="fr-hint-text">{{ gT("Required") }}</span>
            </label>
            {{ C.Html.emailField('register_email', aSurveyInfo.sEmail, ({'id' : 'register_email','class' : 'fr-input','required' : true})) }}
        </div>

        {# Loop to add extra attributes #}
        {% for key, aExtraAttribute in aSurveyInfo.aExtraAttributes  %}
            <div class=' {{ aSurveyInfo.class.registerformextras }} fr-mb-3w' {{ aSurveyInfo.attr.registerformextras }} >
                {% set registerKey = "register_" ~ key %}
                <label for="{{ registerKey }}" class='{{ aSurveyInfo.class.registerformextraslabel }} fr-label '> {{ aExtraAttribute.caption }} {% if aExtraAttribute.mandatory == 'Y' %}{{ include('./subviews/registration/required.twig') }}{% endif %}</label>
                <div {{ aSurveyInfo.attr.registerformcolrowcdiv }} >
                    {{ C.Html.textField(registerKey, aSurveyInfo.aAttribute[key],({'id' : registerKey,'class' : 'fr-input input-sm'})) }}
                </div>
            </div>
        {% endfor %}

        {# Captcha box #}
        {% if aSurveyInfo.bCaptcha %}
            <div class="{{ aSurveyInfo.class.registerformcaptcha }} fr-mb-3w" {{ aSurveyInfo.attr.maincolformdivb }}>
                <label class='{{ aSurveyInfo.class.registerformcaptchalabel }} fr-label ' {{ aSurveyInfo.attr.registerformcaptchalabel }} >{{ gT("Please solve the following equation:") }} {{ include('./subviews/registration/required.twig') }}</label>
                <div class="fr-grid-row" {{ aSurveyInfo.attr.registerformcaptchadiv }}>
                    <div class="{{ aSurveyInfo.class.registerformcaptchadivb }} fr-col-2" {{ aSurveyInfo.attr.registerformcaptchadivb }}>
                            {{ renderCaptcha().renderOut() }}
                    </div>
                    <div class="{{ aSurveyInfo.class.registerformcaptchadivc }} fr-col-1 align-self-center" {{ aSurveyInfo.attr.registerformcaptchadivc }}>
                        <a href="#" class="fr-btn fr-btn--sm fr-btn--tertiary" id="reloadCaptcha" title="{{ gT("Reload captcha") }}" data-fr-toggle="captcha"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class="fr-col-9 align-self-center">
                        <input class='fr-input {{ aSurveyInfo.class.registerformcaptchainput }}' {{ aSurveyInfo.attr.registerformcaptchainput }}>
                    </div>
                </div>
            </div>
        {% endif %}

        {# Mandatory information #}
        <div class='{{ aSurveyInfo.class.registermandatoryinfo }}' {{ aSurveyInfo.attr.registermandatoryinfo }} >
                {{ gT('Fields marked with an asterisk are mandatory.')}}
        </div>

        {# Submit register button #}
        <div class='{{ aSurveyInfo.class.registersave }} fr-mb-3w' {{ aSurveyInfo.attr.registersave }} >
            <div class='{{ aSurveyInfo.class.registersavediv }} float-end' {{ aSurveyInfo.attr.registersavediv }} >
                {% set continue = gT("Continue",'unescaped') %}
                <button {{ aSurveyInfo.attr.registersavedivbutton }}  class='{{ aSurveyInfo.class.registersavedivbutton }} fr-btn fr-btn--secondary' >
                    {{ continue }}
                </button>
            </div>
        </div>

        {# If there is additional form parts, a.e. trhough a plugin render it out here #}
    </div>
    <div class='{{ aSurveyInfo.class.registerformcoladdidtions }} fr-col-lg-8 fr-col-offset-2--lg' {{ aSurveyInfo.attr.registerformcoladdidtions }}>
        {{ aSurveyInfo.formAdditions | raw  }}
    </div>

    {{ C.Html.endForm }}
</div>
