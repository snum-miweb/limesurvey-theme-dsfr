<style>
/*!
 * DSFR Print Styles for LimeSurvey
 * Based on Système de Design de l'État Français
 * Minimal print stylesheet - replaces Bootstrap 3.3.7
 */

/* ============================================
   PRINT RESET & BASE
   ============================================ */
@media print {
    * {
        box-shadow: none !important;
        text-shadow: none !important;
    }

    body {
        font-family: "Marianne", Arial, sans-serif;
        font-size: 12pt;
        line-height: 1.5;
        color: #000;
        background: #fff;
    }

    /* ============================================
       DSFR GRID SYSTEM FOR PRINT
       ============================================ */
    .fr-container,
    .fr-container--fluid {
        width: 100%;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .fr-grid-row {
        display: flex;
        flex-wrap: wrap;
        margin-left: -0.5rem;
        margin-right: -0.5rem;
    }

    .fr-grid-row:before,
    .fr-grid-row:after {
        content: " ";
        display: table;
    }

    .fr-grid-row:after {
        clear: both;
    }

    /* Columns */
    [class*="fr-col-"] {
        position: relative;
        min-height: 1px;
        padding-left: 0.5rem;
        padding-right: 0.5rem;
        float: left;
    }

    .fr-col-1 { width: 8.333333%; }
    .fr-col-2 { width: 16.666667%; }
    .fr-col-3 { width: 25%; }
    .fr-col-4 { width: 33.333333%; }
    .fr-col-5 { width: 41.666667%; }
    .fr-col-6 { width: 50%; }
    .fr-col-7 { width: 58.333333%; }
    .fr-col-8 { width: 66.666667%; }
    .fr-col-9 { width: 75%; }
    .fr-col-10 { width: 83.333333%; }
    .fr-col-11 { width: 91.666667%; }
    .fr-col-12 { width: 100%; }

    /* Small breakpoint */
    .fr-col-sm-1 { width: 8.333333%; }
    .fr-col-sm-2 { width: 16.666667%; }
