<!-- LimeSurvey valid message and help - DSFR -->
<div id="ls-question-validation-{{ aQuestion.SGQ }}" class="{{ aSurveyInfo.class.questionvalidcontainer }} fr-col-12 fr-mb-2w dsfr-validation-container" {{ aSurveyInfo.attr.questionvalidcontainer }}>

    {# System-generated validation tips (e.g., "Only numbers may be entered in this field.") #}
    {# The valid_message already contains pre-formatted HTML from question themes #}
    {% if aQuestion.valid_message is not empty %}
        {{ aQuestion.valid_message | raw }}
    {% endif %}

    {# Mandatory field error message: "This question is mandatory!" #}
    {% if aQuestion.man_message is not empty %}
        {{ aQuestion.man_message | raw }}
    {% endif %}

    {# File upload specific validation messages #}
    {% if aQuestion.file_valid_message is not empty %}
        {{ aQuestion.file_valid_message | raw }}
    {% endif %}

</div>
