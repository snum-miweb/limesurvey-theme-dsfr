{% if aSurveyInfo.aNavigator.load.show == "Y" or aSurveyInfo.aNavigator.save.show == "Y" or aSurveyInfo.bShowClearAll == true %}
    <!-- Extra tools: save/load, clear all -->
    <div class="fr-container fr-my-4w">
        <div class="fr-grid-row fr-grid-row--center fr-grid-row--gutters">
            <!-- Save/Load buttons -->
            {% if aSurveyInfo.aNavigator.load.show == "Y" or aSurveyInfo.aNavigator.save.show == "Y" %}
                <div class="fr-col-auto clearall-saveall-wrapper">
                    {{ include('./subviews/navigation/save_buttons.twig') }}
                </div>
            {% endif %}
            <!-- Clear all button -->
            {% if aSurveyInfo.bShowClearAll == true %}
                <div class="fr-col-auto">
                    {{ include('./subviews/navigation/clearall_buttons.twig') }}
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}

