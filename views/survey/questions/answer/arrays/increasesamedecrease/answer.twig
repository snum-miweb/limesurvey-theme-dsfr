{#
/**
 * Array Increase/Same/Decrease Question - DSFR Theme
 * Type: E (Array Increase/Same/Decrease)
 *
 * This template wraps the generated rows in DSFR-styled table
 *
 * @var $coreClass   : Core classes for the element
 * @var $sColumns    : the columns, generated with the view columns/col.twig
 * @var $sHeaders    : the headers, generated with the view rows/cells/thead.twig
 * @var $sRows       : the rows, generated with the view rows/answer_row.twig
 * @var $answerwidth : Width of the answer column
 * @var $anscount    : Number of answers
 * @var $basename    : Base name for aria labels
 */
#}

<!-- Array Increase/Same/Decrease (Type E) - DSFR -->
<div class="ls-table-wrapper array-increase-same-decrease" role="group" aria-labelledby="ls-question-text-{{ basename }}">
    <div class="fr-table fr-table--bordered" data-fr-js-table="true">
        <table class="{{ coreClass }} array-isd-table" data-fr-js-table-element="true">
            <caption class="fr-sr-only">{{ gT('Increase/Same/Decrease response matrix') }}</caption>
            <colgroup class="col-responses">
                <col class="col-answers" style="width: {{ answerwidth }}%;" />
                {{ sColumns|raw }}
            </colgroup>
            <thead>
                <tr class="ls-heading ls-header">
                    {{ sHeaders|raw }}
                </tr>
            </thead>
            <tbody>
                {% if anscount == 0 %}
                    <tr>
                        <th class="answertext">
                            {{ gT('Error: This question has no answers.') }}
                        </th>
                    </tr>
                {% endif %}
                {{ sRows|raw }}
            </tbody>
        </table>
    </div>
</div>
<!-- end of Array Increase/Same/Decrease - DSFR -->
