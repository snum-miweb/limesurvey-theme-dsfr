{#
/**
 * Multiple Numeric Row - DSFR Theme
 * Type: K (Multiple Numeric)
 *
 * This template renders a numeric input row with label
 *
 * @var $name           Question base name
 * @var $myfname        Full field name
 * @var $question       Subquestion text
 * @var $dispVal        Current value
 * @var $prefix         Prefix text (e.g., â‚¬, $)
 * @var $suffix         Suffix text (e.g., cm, kg)
 * @var $min_value      Minimum value
 * @var $max_value      Maximum value
 * @var $basename       Base name for aria labels
 */
#}

<!-- Multiple Numeric Row - DSFR -->
<li class="answer-item fr-mb-3w">
    <div class="fr-grid-row fr-grid-row--gutters">
        <!-- Label column -->
        <div class="fr-col-12 fr-col-md-6">
            <label class="fr-label" for="answer{{ myfname }}">
                {{ processString(question) }}
            </label>
        </div>

        <!-- Input column -->
        <div class="fr-col-12 fr-col-md-6">
            {% if prefix != '' or suffix != '' %}
                <div class="ls-input-group">
            {% endif %}

                {% if prefix != '' %}
                    <div class="ls-input-group-extra prefix-text prefix">
                        {{ processString(prefix) }}
                    </div>
                {% endif %}

                <input
                    type="number"
                    class="fr-input"
                    name="{{ myfname }}"
                    id="answer{{ myfname }}"
                    value="{{ dispVal }}"
                    {% if min_value %}min="{{ min_value }}"{% endif %}
                    {% if max_value %}max="{{ max_value }}"{% endif %}
                    step="any"
                    aria-labelledby="ls-question-text-{{ basename }}"
                />

                {% if suffix != '' %}
                    <div class="ls-input-group-extra suffix-text suffix">
                        {{ processString(suffix) }}
                    </div>
                {% endif %}

            {% if prefix != '' or suffix != '' %}
                </div>
            {% endif %}
        </div>
    </div>
</li>
<!-- end of Multiple Numeric Row -->
