{# /**
 * Multiple Numerical - Input Answer Row - DSFR Theme
 *
 * @var $myfname
 * @var $labelText
 * @var $dispVal
 * @var $extraclass
 * @var $alert
 * @var $sDisplayStyle
 * @var $sLabelWidth
 * @var $sInputContainerWidth
 * @var $prefix
 * @var $suffix
 * @var $kpclass
 * @var $inputsize
 * @var $maxlength
 * @var $integeronly
 */ #}

<!-- answer_row -->

<li id='javatbd{{ myfname }}' class="question-item answer-item numeric-item text-item fr-mb-3w{{ extraclass }}{% if alert %} ls-error-mandatory has-error{% endif %}" {{ sDisplayStyle }}>
    <div class="fr-grid-row fr-grid-row--gutters">
        <label class="fr-label fr-col-12 fr-col-md-6" for="answer{{myfname}}">
            {{ processString(labelText) }}
        </label>

        <div class="fr-col-12 fr-col-md-6">
            {% if prefix or suffix %}
                <div class="ls-input-group">
            {% endif %}
                {% if prefix %}
                    <div class="ls-input-group-extra prefix-text prefix">
                        {{ processString(prefix) }}
                    </div>
                {% endif %}
                {{ C.Html.textField( myfname, dispVal, {
                    'id' : 'answer'~myfname,
                    'class' : 'fr-input numeric '~kpclass~(alert ? ' fr-input--error' : ''),
                    'title' : gT('Only numbers may be entered in this field.'),
                    'size' : (inputsize ? inputsize : null),
                    'maxlength':  (maxlength ? maxlength : null),
                    'data-number' : 1,
                    'data-integer' : integeronly,
                    })
                }}
                {% if suffix %}
                    <div class="ls-input-group-extra suffix-text suffix">
                        {{ processString(suffix) }}
                    </div>
                {% endif %}
            {% if prefix or suffix %}
                </div>
            {% endif %}
        </div>
    </div>
</li>
<!-- end of answer_row -->
