{#
/**
 * Date Html, dropdown style - DSFR Theme
 *
 * @var $sRows      : the rows, generated with the view rows/*.php
 *
 * @var $name
 * @var $dateoutput
 * @var $checkconditionFunction
 * @var $dateformatdetails
 * @var $dateformat
 * @var $coreClass
 */ #}


<!-- Date, dropdown layout - DSFR -->

<!-- answer -->
<div class="{{ coreClass }} ls-no-js-hidden fr-mb-3w" role="group"
     aria-labelledby="ls-question-text-{{ name }}">
    <div class="fr-grid-row fr-grid-row--gutters">
        {# // rows/*.php #}
        {{ sRows }}
    </div>
</div>
<!-- answer for nojs action and real value sent -->
<div class="fr-grid-row">
    <div class='{{ coreClass }} ls-js-hidden fr-mb-3w fr-col-12 fr-col-md-6'>
        <div class="fr-input-group">
            <label for='answer{{ name }}' class='fr-label'>
                {{ sprintf(gT('Date in the format: %s'), dateformatdetails) }}
            </label>
            <div id="answer{{ name }}_datetimepicker" class="date-timepicker-group"
                 data-basename="{{ name }}"><!-- data-basename used in js function -->
                {{ C.Html.textField(name,dateoutput,{
                    'id' : "answer" ~ name,
                    'class' : "fr-input date-control date em_sq_validation",
                    'aria-describedby' : "ls-question-text-" ~ name,
                }) }}
            </div>
            <p class="fr-hint-text fr-mt-1w" aria-hidden='true'>
                {{ sprintf(gT('Format: %s'),dateformatdetails) }}
            </p>
        </div>
    </div>
</div>
<input type="hidden" id="dateformat{{ name }}" value="{{ dateformatdetails }}" class="em_sq_validation"/>
<!-- end of answer -->
